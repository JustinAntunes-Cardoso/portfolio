{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "esnext",
		"skipLibCheck": true,
		"types": ["node", "jest", "@testing-library/jest-dom"],
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"moduleResolution": "Node",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"]
}
